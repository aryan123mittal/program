# minimum and maximum element in an array in python


# Method 1

array = [20,50,10,70,40,10,30]
print (min(array))
printÂ (max(array))


# Method 2

def find(a,n):
    max=a[0]
    min=a[0]
    for i in range (1,n):
        if a[i]>max:
            max=a[i]
        elif a[i]<max:
            min=a[i]
    return max,min
arr = [7,1,9,4,6,2,8]
n=len(arr)
max_v,min_v = find(arr,n)
print("Maximum element:",max_v)  
print("Minimum element:",min_v)
